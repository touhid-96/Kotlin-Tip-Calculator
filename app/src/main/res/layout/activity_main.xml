<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="70dp"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LL_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Bill"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_weight="2"/>

        <EditText
            android:id="@+id/bill_amount_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp"
            android:hint="Amount"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_percentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tip_percentage_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="80%"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_weight="2"/>

        <SeekBar
            android:id="@+id/percentage_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginStart="10dp"
            android:max="30"
            android:layout_weight="1">
        </SeekBar>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Tip"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/tip_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="23.76 (test)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Total"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/total_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="270.67 (test)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/watermark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Made By Megaprime64"
            android:textSize="18sp"
            android:textAlignment="center">
        </TextView>

    </LinearLayout>

</LinearLayout>